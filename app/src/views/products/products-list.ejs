<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head')  %> 

<body > 
    <%- include('../partials/header')  %>
<main>
    <section class="lista">
      <h2>Todos los productos</h2>
            <table class="tabla">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Descuento</th>
                    <th scope="col">Categor√≠a</th>
                    <th scope="col">Animal</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Acciones</th>
                  </tr>
                </thead>
                <tbody>

        <% products.forEach(({image, name, price, discount, category, pet, brand, id})=> { %>
            <tr>
                <th scope="row"><%= id %></th>
                <td><%= name.slice(0,9) %></td>
                <td><%= price %></td>
                <td><%= discount %></td>              
                <td><%= category.slice(0,3) %></td>
                <td><%= pet.slice(0,5) %></td>
                <td><%= brand.slice(0,5)%></td>
                
                <td>
                    <div class="btn-list">
                        <a class="btn" href="/products/detail/<%= id %>"><i class="fas fa-eye"></i></a>
                        <a class="btn" href="/products/edit/<%= id %>"><i class="fas fa-edit"></i></a>
                        <form action="/products/delete/<%= id %>?_method=delete" method="post">
                            <button type="submit" class="btn"><i class="fa-solid fa-trash"></i></button>
                        </form>                
                    </div>
               </td>

            </tr>           
            <% }) %>  
            </tbody>
          </table> 
        </section>
</main>

    <%- include('../partials/footer')  %> 
</body>
</html>
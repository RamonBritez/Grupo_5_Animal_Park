<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title:'Resultados de tu busqueda'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/header') %>
	<!-- /Header -->
	
	
	<% if (results.length > 0) { %>
		<section class="ofertas">
		<h2>Resultados de la búsqueda: <%= keywords %></h2>
		</section>
					<% results.forEach(product => { %>		 
							<section>
                                <div class="productContainer">
                                    <% results.forEach(product => { %>
                                    <article class="productCard animate__animated animate__fadeInRight">
                                        
                                    <div class="imageContainer">
                                        <img src="/image/products/<%- product.image %>" alt="ProductoDestacado-1">
                                    </div>
                                    <p><%- product.name %></p>
                                    <h2>$<%- product.price %></h2>
                                                        <% if (product.discount > 0) { %>							 
                                                            <span><%- product.discount %>% OFF</span>
                                                        <% } %>
                                    <a href="/products/detail/<%- product.id %>" class="btn">Ver detalles</a>
                                </article>
                                <% }) %>
                            </section>
					<% }) %>
				 
					<% }else{ %>		
						<section class="ofertas">
							<h2 >No hay productos que coincidan con esa búsqueda</h2>
						</section>				
					<% } %>
		 </div>


			
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>
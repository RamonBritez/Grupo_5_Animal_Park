<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>

  <body>
    <%- include('../partials/header') %>
    <main class="admin-main">
      <section>
        <h2>Todos los productos</h2>
        <table class="admin-table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nombre</th>
              <th scope="col">Precio</th>
              <th scope="col">Descuento</th>
              <th scope="col">Categor√≠a</th>
              <th scope="col">Animal</th>
              <th scope="col">Marca</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(({image, name, price, discount, category, pet,
            brand, id})=> { %>
            <tr class="fila-admin">
              <th scope="row"><%= id %></th>
              <td class="data-admin"><%= name.slice(0,9) %></td>
              <td class="data-admin"><%= price %></td>
              <td class="data-admin"><%= discount %></td>
              <td class="data-admin"><%= category.name %></td>
              <td class="data-admin"><%= pet.pet %></td>
              <td class="data-admin"><%= brand.brand%></td>

              <td>
                <div class="btn-list">
                  <a class="btn" href="/products/detail/<%= id %>">
                    <i class="fas fa-eye"></i
                  ></a>
                  <a class="btn" href="/admin/productEdit/<%= id %>"
                    ><i class="fas fa-edit"></i
                  ></a>
                  <button
                    class="btn"
                    onclick="document.getElementById('product-<%- id%>').classList.add('activeModal')"
                  >
                    <i class="fa-solid fa-trash-can"></i>
                  </button>
                </div>
              </td>
              <td class="adminModal" id="product-<%- id%>">
                <form
                  action="/admin/productDelete/<%=id %>?_method=delete"
                  method="post"
                  class="admin-deleteModal"
                >
                  <label>Estas seguro de eliminar este producto?</label>
                  <label>ID: <%- id%></label>
                  <label>Nombre: <%- name %></label>
                  <label>Precio: $<%- price %></label>
                  <label>Descuento: <%- discount%>%</label>
                  <label>Categoria: <%- category.name %></label>
                  <label>Mascota: <%- pet.pet%></label>
                  <label>Marca: <%- brand.brand%></label>
                  <p
                    class="btn"
                    onclick="document.getElementById('product-<%- id%>').classList.remove('activeModal')"
                  >
                    CANCELAR
                  </p>
                  <button class="btn" type="submit">ELIMINAR</button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>

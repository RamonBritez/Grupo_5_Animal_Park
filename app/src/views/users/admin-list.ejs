<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head")  %> 
<body>
    <%- include("../partials/header")  %> 
    <main class="admin-main">
    
        <table class="admin-table">
        <tr class="fila-admin">
            <th class="title-admin">Nombre de usuario</th>
            <th class="title-admin">Email</th>
            <th class="title-admin">Rol</th>
            <th class="title-admin">image</th>
            <th class="title-admin">Acciones</th>
        </tr>
       
       
            <% users.forEach(user => { %>
        <tr class="fila-admin">
            <td class="data-admin"><%- user.userName %></td>
            <td class="data-admin"><%- user.email %></td>
            <td class="data-admin"><%- user.rol %></td>
            <td>
            <div class="avatar">
                <img src="/image/users/<%- user.avatar %>" alt="">
            </div>
            </td>
            <td>
                <div class="btn-list"> 
                    <a class="btn" href="#"><i class="fas fa-edit"></i></a>
                    <form action="#" method="post">
                        <button type="submit" class="btn"><i class="fa-solid fa-trash"></i></button>
                    </form>  
                </div>
            </td>
        </tr>
            <% }) %>
        

    </table>
</main>
    <%- include("../partials/footer")  %> 
</body>
</html>
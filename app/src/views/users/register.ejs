<!DOCTYPE html>
<html lang="es">
  <%- include("../partials/head") %>
  <script src="/js/register.js"></script>
  <body>

    <header class="forms">
      <a href="/"><img src="/image/animalPark/logo_cuadrado_fondo_blanco-mod.png" alt="Home"></a>
  </header>
  <main>
    <main>
      
      <div class="register__container">
        
        <div class="register__container-formTitle">
          <i class="fa-solid fa-circle-user"></i>
          <p class="title">Crear cuenta</p>
        </div>
        
        <form id="formRegister" action="/users/register" class="register__container-form" method="post" enctype="multipart/form-data" novalidate>
          
          <div class="form-element" id="userNameDiv">
            <label for="userName">Nombre</label>
            <input type="text" name="userName" id="userName" placeholder="Ej: Cosme" value="<%= locals.old && old.userName %>"/>
              <span class="text-error" id="userNameErrors"><%= (locals.errors && errors.userName) ? errors.userName.msg : '' %> </span>
          </div>
          
          <div class="form-element">
            <label for="apellido">Apellido</label>
            <input type="text" name="apellido" id="apellido" placeholder="Ej: Fulanito" value="<%= locals.old && old.apellido %>"/>
              <span class="text-error" id="apellidoErrors"><%= (locals.errors && errors.apellido) ? errors.apellido.msg : '' %> </span>
          </div>
          
          <div class="form-element">
            <label for="email">Tu email</label>
            <input type="email" name="email" id="email" placeholder="Ej: cosme@email.com" value="<%= locals.old && old.email %>"/>
              <span class="text-error" id="emailErrors"><%= (locals.errors && errors.email) ? errors.email.msg : '' %> </span>

          </div>
          
          <div class="form-element">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password" placeholder="¡La contraseña debe contener de 6 a 12 caracteres!"/>
              <span class="text-error" id="passwordErrors"><%= (locals.errors && errors.password) ? errors.password.msg : '' %> </span>

          </div>
          
          <div class="form-element">
            <label for="repeatPassword">Vuelve a escribir la contraseña</label>
            <input type="password" name="repeatPassword" id="repeatPassword" />
              <span class="text-error" id="repeatPasswordErrors"><%= (locals.errors && errors.repeatPassword) ? errors.repeatPassword.msg : '' %> </span>
          </div>



          <div class="input-file">
            <label for="avatar" >Agregar Avatar</label>
            <input type="file" id="avatar" name="avatar" accept="image/*">
          </div>
          <span class="text-error" id="avatarErrors"> </span>


          <div class="form-terms">
            <input type="checkbox" name="checkTerms" id="checkTerms" />
            <label for="terms">Acepto los <a href="#" target="_blank">terminos y condiciones</a> </label>
            <br>
              <span class="text-error" id="checkTermsErrors"><%= (locals.errors && errors.checkTerms) ? errors.checkTerms.msg : '' %> </span>
          </div>

          <button type="submit" class="form-submit">Registrar</button>
          <span class="text-error" id="submitErrors"></span>
        
        </form>
        
        <div class="register__container-separator">
          <div class="line"></div>
          <p>o</p>
          <div class="line"></div>
        </div>
        <!-- 
        <div class="register__container-network">
          <button> Crear cuenta con Google
        </div> -->
        <div class="existentAccount">
          <p>¿Ya tienes una cuenta?</p>
          <a href="/users/login">Ingresá</a>
        </div>
      </div>
    </main>
    <%- include("../partials/footer")  %> 

  </body>
</html>
